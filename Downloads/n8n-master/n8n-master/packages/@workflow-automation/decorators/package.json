{
  "name": "@workflow-automation/decorators",
  "version": "0.31.0",
  "scripts": {
    "clean": "rimraf dist .turbo",
    "dev": "pnpm watch",
    "typecheck": "tsc --noEmit",
    "build": "tsc -p tsconfig.build.json",
    "format": "biome format --write .",
    "format:check": "biome ci .",
    "lint": "eslint . --quiet",
    "lint:fix": "eslint . --fix",
    "watch": "tsc -p tsconfig.build.json --watch",
    "test": "jest",
    "test:dev": "jest --watch"
  },
  "main": "dist/index.js",
  "module": "src/index.ts",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@workflow-automation/typescript-config": "workspace:*",
    "@types/express": "catalog:",
    "@types/lodash": "catalog:"
  },
  "dependencies": {
    "@workflow-automation/constants": "workspace:^",
    "@workflow-automation/di": "workspace:^",
    "@workflow-automation/permissions": "workspace:^",
    "lodash": "catalog:",
    "workflow-automation-workflow": "workspace:^"
  }
}
